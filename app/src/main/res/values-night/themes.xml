<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.Dark">
        <!-- Customize your dark theme here. -->

        <item name="colorSecondaryVariant">@color/white</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>

        <item name="colorSurfaceContainer">@color/grey</item>
        <item name="colorOnPrimaryFixed">@color/darkPrimary</item>
        <item name="colorOnSecondaryFixed">@color/darkSecondary</item>
        <item name="colorOnTertiaryFixed">@color/darkTertiary</item>
        <item name="colorOnTertiaryFixedVariant">@color/darkQuaternary</item>
        <item name="colorPrimary">@color/blue</item>
        <!-- Following affect the toolbar and its text color:

        <item name="colorOnSurface">@color/darkBlue</item>-->
        <item name="colorSurface">@color/black</item>

        <item name="colorSurfaceDim">@android:color/transparent</item>

        <item name="colorPrimaryInverse">@color/blue</item>
        <item name="colorSurfaceBright">@color/buttonDark</item>

    </style>
    <style name="checkbox_checked" parent="Theme.Material3.Light">
        <item name="colorAccent">@color/black </item>
        <item name="android:textColorSecondary">@color/black </item>
        <item name="colorPrimary">@color/lightQuaternary</item>
        <item name="colorOnSecondaryContainer">@color/white</item>



    </style>
</resources>