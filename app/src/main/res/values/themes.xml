<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>


        <item name="colorSurfaceContainer">@color/darkBlue</item>
        <item name="colorOnPrimaryFixed">@color/lightPrimary</item>
        <item name="colorOnSecondaryFixed">@color/lightSecondary</item>
        <item name="colorOnTertiaryFixed">@color/lightTertiary</item>
        <item name="colorOnTertiaryFixedVariant">@color/lightQuaternary</item>
        <item name="colorPrimary">?attr/colorOnTertiaryFixedVariant</item>
        <!-- Following affect the toolbar and its text color: -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorSurfaceDim">@android:color/transparent</item>

        <item name="colorPrimaryInverse">@color/orangery</item>
        <item name="colorSurfaceBright">@color/buttonLight</item>

        <item name="colorSwitchThumbNormal">@color/lightDialog</item>
        <item name="colorControlActivated">@color/lightDivider</item>
    </style>
    <style name="checkbox_checked" parent="Theme.Material3.Light">
        <item name="colorAccent">@color/lightQuaternary </item>
        <item name="android:textColorSecondary">@color/lightQuaternary </item>
        <item name="colorPrimary">@color/blue</item>

    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp" />
</resources>